<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".AddBuyerActivity">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_buyer"
            android:gravity="center"
            android:textColor="#FFFF00"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_margin="@dimen/margin_large"
            android:paddingTop="@dimen/padding_xlarge"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/FirstNameTIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000"
                app:hintTextAppearance="@style/MyHintText"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/first_nameEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:theme="@style/MyEditText"
                    android:layout_marginRight="@dimen/margin_large"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName"
                    android:padding="@dimen/padding_xlarge"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_xlarge" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lastNameTIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/MyHintText"
                android:textColorHint="#000000"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/last_nameEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginRight="@dimen/margin_large"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:hint="@string/last_name"
                    android:inputType="textPersonName"
                    android:padding="@dimen/padding_xlarge"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_xlarge"
                    android:theme="@style/MyEditText" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/addressTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/MyHintText"
            android:textColorHint="#000000"
            android:layout_weight="1">

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyEditText"
                android:layout_weight="1"
                android:hint="@string/address"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginLeft="@dimen/margin_large"
                android:inputType="textPostalAddress"
                android:background="@drawable/edit_text_bg"
                android:padding="@dimen/padding_xlarge"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_xlarge" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/MobileTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/MyHintText"
            android:textColorHint="@android:color/black"
            android:layout_weight="1">

            <EditText
                android:id="@+id/mobileEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:background="@drawable/edit_text_bg"
                android:hint="@string/mobile_no"
                android:inputType="number"
                android:padding="@dimen/padding_xlarge"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_xlarge"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/AadharTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/MyHintText"
            android:textColorHint="@android:color/black"
            android:layout_weight="1">

            <EditText
                android:id="@+id/aadharEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:background="@drawable/edit_text_bg"
                android:hint="@string/aadhar_no"
                android:inputType="number"
                android:padding="@dimen/padding_xlarge"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_xlarge"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/LicenseTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/MyHintText"
            android:textColorHint="@android:color/black"
            android:layout_weight="1">

            <EditText
                android:id="@+id/licenseEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:background="@drawable/edit_text_bg"
                android:hint="@string/license"
                android:inputType="text"
                android:padding="@dimen/padding_xlarge"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_xlarge"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_bg"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginLeft="@dimen/margin_large">

            <TextView
                android:id="@+id/GenderTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:padding="@dimen/padding_large"
                android:text="@string/gender"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="2sp">

                <RadioButton
                    android:id="@+id/Male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_xlarge"
                    android:text="@string/male"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/Female"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/padding"
                    android:text="@string/female"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/other"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_xlarge"
                    android:text="@string/other"
                    android:textSize="17sp" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/BuyerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:layout_marginRight="@dimen/margin_xxlarge"
            android:background="@drawable/buttonstyle"
            android:padding="@dimen/padding_xlarge"
            android:text="@string/add_buyer"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_xxlarge" />
    </LinearLayout>
</ScrollView>